{
  "compilerOptions": {
    "noEmit": true,
    "outDir": "./es6",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "sourceMap": false,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "stripInternal": true
  },
  "include": ["./src", "./test"]
}
